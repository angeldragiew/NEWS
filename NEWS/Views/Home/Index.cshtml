@using NEWS.Core.Dtos.News
@{
    ViewData["Title"] = "Home Page";
}
@model List<NewsGetDto>

<div class="trending-area fix pt-25 gray-bg">
    <div class="container">
        <div class="trending-main">
            <div class="row">
                @if (Model.Any())
                {
                    <div class="col-lg-8">
                        <!-- Trending Top -->
                        <div class="slider-active">
                            <!-- Single -->
                            <div class="single-slider">
                                <div class="trending-top mb-30">
                                    <div class="trend-top-img">
                                        <img src="~/uploads/@Model[0].Image" alt="">
                                        <div class="trend-top-cap">
                                            <span class="bgr" data-animation="fadeInUp" data-delay=".2s" data-duration="1000ms">@Model[0].CategoryName</span>
                                            <h2><a href="/News/Details/@Model[0].Id" data-animation="fadeInUp" data-delay=".4s" data-duration="1000ms">@Model[0].Title</a></h2>
                                            <p data-animation="fadeInUp" data-delay=".6s" data-duration="1000ms">by @Model[0].   -   @Model[0].Date</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @if (Model.Count() > 1)
                {
                    <div class="col-lg-4">
                        <!-- Trending Top -->
                        <div class="row">
                            @for (int i = 1; i < Model.Count(); i++)
                            {
                                <div class="col-lg-12 col-md-6 col-sm-6">
                                    <div class="trending-top mb-30">
                                        <div class="trend-top-img">
                                            <img src="~/uploads/@Model[i].Image">
                                            <div class="trend-top-cap trend-top-cap2">
                                                <span class="bgg">@Model[i].CategoryName </span>
                                                <h2><a href="/News/Details/@Model[i].Id">@Model[i].Title</a></h2>
                                                <p>
                                                    by @Model[i].Author -   @Model[i].Date
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="weekly2-news-area pt-50 pb-30 gray-bg">
    <div class="container">
        <div class="weekly2-wrapper">
            <div class="row">
                <!-- Banner -->
                <div class="col-lg-3">
                    <div class="home-banner2 d-none d-lg-block">
                        <img src="~/img/gallery/body_card2.png" alt="">
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="slider-wrapper">
                        <!-- section Tittle -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="small-tittle mb-30">
                                    <h4>Most Popular</h4>
                                </div>
                            </div>
                        </div>
                        <!-- Slider -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="weekly2-news-active d-flex">
                                    @foreach (var news in ViewBag.TrendingNews)
                                    {
                                        <div class="weekly2-single" style="width: 100%;">
                                            <div class="weekly2-img">
                                                <img src="~/uploads/@news.Image" class="popular-img">
                                            </div>
                                            <div class="weekly2-caption">
                                                <h4><a href="/News/Details/@news.Id">@news.Title</a></h4>
                                                <p>@news.Author  |  @news.Date</p>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>  