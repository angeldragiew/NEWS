@using NEWS.Core.Dtos.News
@model List<NewsGetDto>

<div class="about-area2 gray-bg pt-60 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="whats-news-wrapper">
                    <!-- Heading & Nav Button -->
                    <!-- Tab content -->
                    <div class="row">
                        <div class="col-12">
                            <!-- Nav Card -->
                            <div class="tab-content" id="nav-tabContent">
                                <!-- card one -->
                                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                                    <div class="row">
                                        @foreach (var news in Model)
                                        {
                                            <div class="col-xl-6 col-lg-6 col-md-6">
                                                <div class="whats-news-single mb-40 mb-40">
                                                    <div class="whates-img">
                                                        <img src="~/uploads/@news.Image" alt="">
                                                    </div>
                                                    <div class="float-right">
                                                        <a href="/News/Edit/@news.Id" class="genric-btn info radiu">Edit</a>
                                                        <a href="/News/Delete/@news.Id" class="genric-btn danger radiu">Delete</a>
                                                    </div>
                                                    <div class="whates-caption whates-caption2">
                                                        <h4>
                                                            <a href="/News/Details/@news.Id">
                                                                @news.Title
                                                            </a>
                                                        </h4>
                                                        <span>by @news.Author   -   @news.Date</span>
                                                        <p>@(news.Paragraphes?.FirstOrDefault()?.Length > 120 ? news.Paragraphes.First().Substring(0, 220) + ".." : news.Paragraphes.FirstOrDefault())</p>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
