@using NEWS.Core.Dtos.News
@model List<NewsGetDto>

<div class="about-area2 gray-bg pt-60 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="whats-news-wrapper">
                    <!-- Heading & Nav Button -->
                    <div class="row justify-content-between align-items-start mb-15 center">
                        <div class="">
                            <div class="properties__button">
                                <!--Nav Button  -->
                                <nav>
                                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                        @foreach (var category in ViewBag.Categories)
                                        {
                                            <a class="nav-item nav-link" href="/News/All/@category.Id">@category.Name</a>
                                        }
                                    </div>
                                </nav>
                                <!--End Nav Button  -->
                            </div>
                        </div>
                    </div>
                    <!-- Tab content -->
                    <div class="row">
                        <div class="col-12">
                            <!-- Nav Card -->
                            <div class="tab-content" id="nav-tabContent">
                                <!-- card one -->
                                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                                    <div class="row">
                                        @foreach (var news in Model)
                                        {
                                            <div class="col-xl-6 col-lg-6 col-md-6">
                                                <div class="whats-news-single mb-40 mb-40">
                                                    <div class="whates-img">
                                                        <img src="~/uploads/@news.Image" alt="">
                                                    </div>
                                                    <div class="whates-caption whates-caption2">
                                                        <h4>
                                                            <a href="/News/Details/@news.Id">
                                                                @news.Title
                                                            </a>
                                                        </h4>
                                                        <span>by @news.Author   -   @news.Date</span>
                                                        <p>@(news.Paragraphes?.FirstOrDefault()?.Length > 120 ? news.Paragraphes.First().Substring(0, 220) + ".." : news.Paragraphes.FirstOrDefault())</p>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
